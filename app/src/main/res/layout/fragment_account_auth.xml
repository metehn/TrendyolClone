<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.AccountFragmentAuth"
    android:clickable="true"
    android:background="@color/base">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

       <View
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="0.165"
           android:background="@color/pumpkin"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.835"
            android:background="@color/base"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_Main_AccountFragmentAuth"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_AccountFragmentAuth_mail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="22sp"
            android:textColor="@color/black"/>

    </LinearLayout>


</FrameLayout>