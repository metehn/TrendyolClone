<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base"
    android:orientation="vertical"
    tools:context=".Fragment.FavoritesFragment">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="0.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/pumpkin"
        app:title="@string/title_account"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/Toolbar.TitleText">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notifications"
            app:tint="@color/white"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"/>


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_flower_smile"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_account"
            android:gravity="center"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="12dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hesabınızı görüntüleyebilmek için lütfen giriş yapın. Siparişlerinizi ve Elite üyelik durumunuzu hesabımdan takip edebilirsiniz."
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="22dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_FragmentAccount_SignIn"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="@string/sign_in"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="30dp"
            android:textAllCaps="false"
            android:background="@drawable/custom_background_2"
            app:itemRippleColor="@null"
            android:layout_marginTop="30dp"/>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>